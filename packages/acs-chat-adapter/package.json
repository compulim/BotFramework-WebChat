{
  "name": "botframework-webchat-chat-adapter-acs",
  "version": "0.0.0-0",
  "description": "",
  "main": "lib/index.js",
  "module": "lib/esm/index.js",
  "scripts": {
    "build": "concurrently \"npm run build:babel\"",
    "build:babel": "concurrently \"npm run build:babel:*\" \"npm run build:typescript\"",
    "build:babel:cjs": "babel --config-file ./babel.cjs.config.json --extensions \".js,.jsx,.ts,.tsx\" --ignore \"src/**/*.spec.js\",\"src/**/*.test.js\" --out-dir lib src",
    "build:babel:esm": "babel --config-file ./babel.esm.config.json --extensions \".js,.jsx,.ts,.tsx\" --ignore \"src/**/*.spec.js\",\"src/**/*.test.js\" --out-dir lib/esm src",
    "build:typescript": "tsc --project ./src",
    "eslint": "npm run precommit",
    "precommit": "concurrently --raw \"npm run precommit:*\"",
    "precommit:eslint": "eslint src/**/*.{js,ts,tsx}",
    "precommit:typecheck": "tsc --project ./src --emitDeclarationOnly false --esModuleInterop true --noEmit",
    "prestart:babel:cjs": "npm run build:babel:cjs",
    "prestart:babel:esm": "npm run build:babel:esm",
    "start": "concurrently \"npm run start:babel\"",
    "start:babel": "concurrently \"npm run start:babel:*\" \"npm run start:typescript\"",
    "start:babel:cjs": "npm run build:babel:cjs -- --skip-initial-build --watch",
    "start:babel:esm": "npm run build:babel:esm -- --skip-initial-build --watch",
    "start:typescript": "npm run build:typescript -- --watch"
  },
  "author": "Microsoft Corporation (https://microsoft.com/)",
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "^7.13.0",
    "@babel/core": "^7.13.8",
    "@babel/preset-env": "^7.13.9",
    "@babel/preset-react": "^7.12.13",
    "@types/prop-types": "15.7.3",
    "@types/react": "17.0.3",
    "concurrently": "^6.0.0",
    "eslint": "^7.23.0",
    "eslint-plugin-react": "^7.23.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "prettier": "^2.2.1",
    "typescript": "4.2.3"
  },
  "dependencies": {
    "@azure/acs-chat-declarative": "file:azure-acs-chat-declarative-1.0.0-beta.tgz",
    "@azure/acs-ui-sdk": "file:azure-acs-ui-sdk-0.1.0.tgz",
    "@azure/communication-chat": "1.0.0-beta.4",
    "abort-controller": "3.0.0",
    "abort-controller-es5": "1.2.0",
    "botframework-webchat-core": "^0.0.0-0",
    "core-js": "3.9.1",
    "math-random": "2.0.1",
    "p-defer": "3.0.0",
    "p-defer-es5": "1.2.1",
    "prop-types": "15.7.2",
    "simple-update-in": "2.2.0"
  },
  "peerDependencies": {
    "react": ">= 16.8.6"
  }
}
